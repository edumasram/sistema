<%= form_for @produto, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :nome, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nome, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sku, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sku, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :estoque, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :estoque, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cod_fornecedor, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cod_fornecedor, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :marca_id, :class => 'control-label' %>
    <div class="controls">
      
     <%= f.collection_select :marca_id, Marca.all, :id, :nome %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                produtos_path, :class => 'btn' %>
  </div>
<% end %>
